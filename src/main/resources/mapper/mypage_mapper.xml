<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC   "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	   
<mapper namespace="kr.co.two.mypage.dao.MypageDAO">

	<insert id="calendarUpdate" parameterType="eventdata">
		INSERT INTO indi_calendar (content, start_date, end_date,member_id,allDay,backgroundColor,borderColor) 
		VALUES (#{content},#{start_date},#{end_date},#{member_id},#{allDay},#{backgroundColor},#{borderColor})
	</insert>
	
	<select id="getEvent" resultType="eventdata">
		SELECT * FROM indi_calendar WHERE member_id="1812001"
	
	</select>

</mapper>