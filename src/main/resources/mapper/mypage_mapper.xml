<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC   "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	   
<mapper namespace="kr.co.two.mypage.dao.MypageDAO">

	<insert id="calendarUpdate" parameterType="eventdata">
		INSERT INTO indi_calendar (content, start_date, end_date,member_id,allDay,backgroundColor,borderColor) 
		VALUES (#{content},#{start_date},#{end_date},#{member_id},#{allDay},#{backgroundColor},#{borderColor})
	</insert>
	
	<select id="getEvent" resultType="eventdata">
		SELECT * FROM indi_calendar WHERE member_id="1812001"
	
	</select>


	<insert id="myFolderCreate" parameterType="java.lang.String">
    	INSERT INTO myFolder (member_id, folder_name)
    	VALUES ("1812001", #{folderName})
	</insert>
	
	<select id="folderList" resultType="mypage">
   		SELECT * FROM myFolder
    </select>
    
    <update id="myFolderUpdate" parameterType="map">
		UPDATE myFolder
		SET folder_name = #{folderName}
		WHERE folder_id = #{folderId}
	</update>
	
	<delete id="myFolderDelte">
        DELETE FROM myFolder WHERE folder_id = #{folderId}
    </delete>
    
    <select id="fileList" resultType="mypage">
   		SELECT * FROM file WHERE folder_id = #{folderId}
    </select>
    
    <insert id="fileUpload" parameterType="java.lang.String">
    	INSERT INTO file (folder_id, fileName, ext, newFileName)
    	VALUES (#{folderId},  #{fileName}, #{ext}, #{newFileName})
	</insert>
	

</mapper>